Ex2. Implement three nodes point – to – point network with duplex links between them. Set the queue size, vary the bandwidth, and find the number of packets dropped. 

set ns [new Simulator]

set tf [open ex2.tr w]
$ns trace-all $tf

set nf [open ex2.nam w]
$ns namtrace-all $nf

set n0 [$ns node]
set n1 [$ns node]
set n2 [$ns node]

$ns duplex-link $n0 $n1 1Mb 10ms DropTail
$ns duplex-link $n1 $n2 100Kb 10ms DropTail
$ns duplex-link $n2 $n0 1kb 10ms DropTail

$ns queue-limit $n0 $n1 20
$ns queue-limit $n1 $n2 10
$ns queue-limit $n2 $n0 5

set src [$ns create-connection TCP $n0 TCPSink $n1 1]
set src1 [$ns create-connection TCP $n1 TCPSink $n2 1]
set src2 [$ns create-connection TCP $n2 TCPSink $n0 1]

set ftp [$src attach-app FTP]
set ftp1 [$src1 attach-app FTP]
set ftp2 [$src2 attach-app FTP]

$ns at 0.0 "$ftp start" ;$ns at 2.0 "$ftp stop"
$ns at 0.0 "$ftp1 start" ;$ns at 2.0 "$ftp1 stop"
$ns at 0.0 "$ftp2 start" ;$ns at 2.0 "$ftp2 stop"

proc finish {} {
    global ns tf
    $ns flush-trace
    close $tf
    exec nam ex2.nam &
    puts "Simulation started."
    exit 0
}

$ns at 10.0 "finish"

$ns run

